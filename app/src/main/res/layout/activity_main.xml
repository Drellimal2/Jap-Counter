<android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/home_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"/>
</LinearLayout>
